<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SWCRunes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SWCRunes"
    >
    <FlyoutItem Title="Home">
        <Tab>
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Monsters">
        <Tab>
    <ShellContent
        Title="Monsters"
        ContentTemplate="{DataTemplate local:MonsterInventory}"
        Route="MainPage" />
    </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Runes">
        <Tab>
    <ShellContent
        Title="Runes"
        ContentTemplate="{DataTemplate local:RuneInventory}"
        Route="MainPage" />
    </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Requests">
        <Tab>
    <ShellContent
        Title="Requests"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Recommendations">
        <Tab>
    <ShellContent
        Title="Recommendations"
        ContentTemplate="{DataTemplate local:RecommendationInventory}"
        Route="MainPage" />
    </Tab>
    </FlyoutItem>


</Shell>

