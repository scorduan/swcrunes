<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SWCRunes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SWCRunes"
    >
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">

        
        <ShellContent 
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="Home" />


        <ShellContent
        Title="Monsters"
        ContentTemplate="{DataTemplate local:MonsterInventory}"
        Route="monsters" />


        <ShellContent
        Title="Runes"
        ContentTemplate="{DataTemplate local:RuneInventory}"
        Route="runes" />

        
        <ShellContent
        Title="Requests"
        ContentTemplate="{DataTemplate local:RequestInventory}"
        Route="requests" />


        <ShellContent
        Title="Recommendations"
        ContentTemplate="{DataTemplate local:RecommendationInventory}"
        Route="recommendations" />
         

        <Tab Title="Teams" Route="teams">
            <ShellContent
            Title="Teams"
            ContentTemplate="{DataTemplate local:TeamInventory}"
            Route="list" />
        
            </Tab>
    </FlyoutItem>

</Shell>

