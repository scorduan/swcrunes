<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SWCRunes.ThresholdDetail"
                          xmlns:local="clr-namespace:SWCRunes"
             xmlns:lib="clr-namespace:SWCRunesLib;assembly=SWCRunesLib"
             xmlns:components="clr-namespace:SWCRunes.Components"
             Title="ThresholdDetail"
             x:DataType="local:RequestInventoryViewModel">
    
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label Style="{StaticResource labelLabelStyle}" Text="Stat: "/>
            <Picker ItemsSource="{Binding AttributeList}" SelectedItem="{Binding SelectedThreshold.CheckStat}" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Style="{StaticResource labelLabelStyle}" Text="Threshold: "/>
            <Entry Text="{Binding SelectedThreshold.Threshold}"/>
        </HorizontalStackLayout>
        <Button x:Name="save" Text="Save" Clicked="save_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
